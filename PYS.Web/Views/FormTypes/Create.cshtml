@using PYS.Web.Services
@using PYS.Core.Application.Features.FormTypesFeature.Dtos
@model CreateFormTypeDto
@{

}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light"><a asp-action="Index">Formlar</a> /</span> Form Tipi Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="FormTypes" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FormTypeName" id="defaultFormControlInput" class="form-label">Form Tipi *</label>
                            <input asp-for="FormTypeName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Form Tipi Giriniz" aria-describedby="defaultFormControlHelp" required>
                        </div>                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">@localization.GetKey("Save").Value</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>