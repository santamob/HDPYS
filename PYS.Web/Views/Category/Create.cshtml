@using PYS.Web.Services
@using PYS.Core.Application.Features.CategoryFeature.Dtos
@model CreateCategoryDto
@{
    string PlaseEnterContent = localization.GetKey("PlaseEnterContent").Value;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light"><a asp-action="Index">@localization.GetKey("CategoryManagement").Value</a> /</span> @localization.GetKey("Category").Value @localization.GetKey("Add").Value
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" id="defaultFormControlInput" class="form-label">@localization.GetKey("Category").Value *</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="@PlaseEnterContent" aria-describedby="defaultFormControlHelp" required>
                        </div>                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">@localization.GetKey("Save").Value</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>